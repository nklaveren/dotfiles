{
  "terminal.integrated.accessibleViewPreserveCursorPosition": true,
  "terminal.integrated.focusAfterRun": "terminal",
  "[scss]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "vim.useSystemClipboard": true,
  "terminal.integrated.tabs.enabled": true,
  "editor.lineNumbers": "relative",
  "inlineChat.acceptedOrDiscardBeforeSave": true,
  "editor.formatOnSave": true,
  "editor.suggest.insertMode": "replace",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "window.zoomLevel": 0.5,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideActivityBar": true,
  "zenMode.showTabs": "multiple",
  "zenMode.centerLayout": false,
  "launch": {},
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "vim.smartRelativeLine": true,
  "vim.leader": "<Space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    // NAVIGATION
    // switch b/w buffers
    {
      "before": [
        "<S-h>"
      ],
      "commands": [
        ":bprevious"
      ]
    },
    {
      "before": [
        "<S-l>"
      ],
      "commands": [
        ":bnext"
      ]
    },
    // splits
    {
      "before": [
        "leader",
        "v"
      ],
      "commands": [
        ":vsplit"
      ]
    },
    {
      "before": [
        "leader",
        "s"
      ],
      "commands": [
        ":split"
      ]
    },
    // panes
    {
      "before": [
        "leader",
        "h"
      ],
      "commands": [
        "workbench.action.focusLeftGroup"
      ]
    },
    {
      "before": [
        "leader",
        "j"
      ],
      "commands": [
        "workbench.action.focusBelowGroup"
      ]
    },
    {
      "before": [
        "leader",
        "k"
      ],
      "commands": [
        "workbench.action.focusAboveGroup"
      ]
    },
    {
      "before": [
        "leader",
        "l"
      ],
      "commands": [
        "workbench.action.focusRightGroup"
      ]
    },
    {
      "before": [
        "leader",
        "w"
      ],
      "commands": [
        ":w!"
      ]
    },
    {
      "before": [
        "leader",
        "q"
      ],
      "commands": [
        ":q!"
      ]
    },
    {
      "before": [
        "leader",
        "x"
      ],
      "commands": [
        ":x!"
      ]
    },
    {
      "before": [
        "<leader>",
        "c",
        "a"
      ],
      "commands": [
        "editor.action.quickFix"
      ]
    },
    {
      "before": [
        "leader",
        "f"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before": [
        "leader",
        "p"
      ],
      "commands": [
        "editor.action.formatDocument"
      ]
    },
    {
      "before": [
        "g",
        "h"
      ],
      "commands": [
        "editor.action.showDefinitionPreviewHover"
      ]
    }
  ],
  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    },
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    // Move selected lines while staying in visual mode
    {
      "before": [
        "J"
      ],
      "commands": [
        "editor.action.moveLinesDownAction"
      ]
    },
    {
      "before": [
        "K"
      ],
      "commands": [
        "editor.action.moveLinesUpAction"
      ]
    },
    {
      "before": [
        "leader",
        "c"
      ],
      "commands": [
        "editor.action.commentLine"
      ]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "<leader>",
        "m"
      ],
      "commands": [
        "bookmarks.toogle"
      ]
    },
    {
      "before": [
        "<leader>",
        "b"
      ],
      "commands": [
        "bookmarks.list"
      ]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      //when i press alt + c, it will exit insert mode
      "before": [
        "<alt>",
        "รง"
      ],
      "commands": [
        "extension.vim_escape.vim"
      ]
    }
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "workbench.colorTheme": "Monokai",
  "workbench.activityBar.location": "top",
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "git.confirmSync": false,
  "workbench.startupEditor": "none",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.component.ts": "${capture}.component.html,${capture}.component.scss,${capture}.component.ts,${capture}.component.store.ts,${capture}.component.spec.ts",
    "*.page.ts": "${capture}.page.html,${capture}.page.scss,${capture}.page.ts,${capture}.page.store.ts,${capture}.page.spec.ts"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // hide folders:
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/build": true,
    // "**/dist": true,
    "**/coverage": true,
    ".mono": true,
    "**/bin": true,
    "**/obj": true
  },
  "editor.indentSize": "tabSize",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "llm.modelId": "bigcode/starcoder2-15b",
  "llm.backend": "huggingface",
  "llm.url": null,
  "llm.fillInTheMiddle.enabled": true,
  "llm.fillInTheMiddle.prefix": "<fim_prefix>",
  "notebook.cellFocusIndicator": "border",
  "notebook.stickyScroll.mode": "flat",
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "editor.minimap.enabled": false
}